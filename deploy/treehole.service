[Unit]
Description=Treehole App
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/opt/treehole
Environment=HOST=127.0.0.1
Environment=PORT=8000
Environment=ADMIN_TOKEN=change-this-token
ExecStart=/usr/bin/python3 /opt/treehole/app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
